<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account_mypage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white" >

    <RelativeLayout
        android:id="@+id/account_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_blue" >

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/back_btn_white" />

        <TextView
            android:id="@+id/AccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Beauty"
            android:textColor="@color/color_white"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/account_set"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_menu" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/AccountLinear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_title"
        android:layout_margin="2dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

	<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

		<ImageButton
                android:id="@+id/AccountFollowers"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="@drawable/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/account_followers" />

		<TextView
                android:id="@+id/textView1"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:hint="关注者"
                android:textSize="14sp" />

	</LinearLayout>

	<com.wedrips.view.CircleImageView
	    android:id="@+id/headimg"
	    android:layout_width="72dp"
	    android:layout_height="72dp"
	    android:layout_gravity="center"
	    android:src="@drawable/beauty_square" />

	<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

	<ImageButton
                android:id="@+id/AccountFollowing"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/account_following" />

	<TextView
                android:id="@+id/textView2"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:hint="关注中"
                android:textSize="14sp" />

	</LinearLayout>
	</LinearLayout>

    <LinearLayout
        android:id="@+id/focus_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AccountLinear1"
        android:layout_marginBottom="2dp"
        android:background="#FFF"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible" >

        <Button
            android:id="@+id/guanzhu"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_bluebtn"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/color_blue"
            android:textSize="14sp" />

        <Button
            android:id="@+id/tianjia"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_bluebtn"
            android:gravity="center"
            android:text="好友"
            android:textColor="@color/color_blue"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/account_horiline_1"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/focus_btn"
        android:scaleType="fitXY"
        android:src="@drawable/line_gray" />

    <LinearLayout
        android:id="@+id/AccountLinear3"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/account_horiline_1"
        android:layout_margin="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <ImageButton
            android:id="@+id/account_tabbtn_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/transparent"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/account_dynamics_sl" />

		<ImageButton
		    android:id="@+id/account_tabbtn_activity"
		    android:layout_width="wrap_content"
		    android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:layout_weight="1"
		    android:background="@drawable/transparent"
		    android:scaleType="fitCenter"
		    android:src="@drawable/account_activity" />

        <ImageButton
            android:id="@+id/account_tabbtn_detail"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/account_details" />
    </LinearLayout>

	<ImageView
	    android:id="@+id/account_horiline_2"
	    android:layout_width="match_parent"
	    android:layout_height="2px"
	    android:layout_below="@id/AccountLinear3"
	    android:scaleType="fitXY"
	    android:src="@drawable/line_gray" />

    <android.support.v4.view.ViewPager
        android:id="@+id/account_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/AccountLinear3" />

</RelativeLayout>
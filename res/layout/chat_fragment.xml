<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_blue" >

        <ImageButton
            android:id="@+id/search_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_search" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/group_btn"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_margin="6dp"
                android:layout_toLeftOf="@+id/chat_btn"
                android:layout_weight="1"
                android:gravity="center"
                android:text="社群"
                android:textColor="@color/color_white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/friend_btn"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/shape_whitebtn"
                android:gravity="center"
                android:text="聊天"
                android:textColor="@color/color_blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_btn"
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_margin="6dp"
                android:layout_toRightOf="@+id/chat_btn"
                android:layout_weight="1"
                android:gravity="center"
                android:text="活动"
                android:textColor="@color/color_white"
                android:textSize="16sp" />

        </LinearLayout>

		<ImageButton
		    android:id="@+id/contactslist_btn"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="6dp"
		    android:background="@drawable/transparent"
		    android:scaleType="fitCenter"
		    android:src="@drawable/contacts_btn" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/chatpage_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/new_socialgroup_topbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_pink" >

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/back_btn_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/newgroup_btn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="社群"
                android:textColor="@color/color_white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/newpublic_btn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_toLeftOf="@+id/focus_btn"
                android:layout_weight="1"
                android:gravity="center"
                android:text="公众号"
                android:textColor="@color/color_black"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/confirm_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:src="@drawable/icon_confirm_white" />
    </RelativeLayout>
	<android.support.v4.view.ViewPager
        android:id="@+id/new_socialgroup_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/new_socialgroup_topbar"
        android:background="@color/color_white" >

    </android.support.v4.view.ViewPager>
</LinearLayout>

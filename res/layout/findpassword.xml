<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_lightblue">

    <ImageButton
        android:id="@+id/findpw_back_btn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_margin="10dp"
        android:background="@drawable/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/back_btn_white" />

	<TextView
	    android:id="@+id/text_findpw"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_margin="14dp"
	    android:text="找回密码"
	    android:textColor="#FFF"
	    android:textSize="16sp" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:layout_marginTop="20dp"
	    android:gravity="center"
	    android:orientation="vertical" >

    <EditText
        android:id="@+id/findpw_id"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="20dp"
        android:background="@drawable/edittextline"
        android:hint="电话号码"
        android:inputType="phone"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:textSize="14sp" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/findpw_code"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="@drawable/edittextline"
            android:hint="验证码"
            android:inputType="number"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/findpw_code_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_whitebtn"
            android:text="验证码"
            android:textColor="@color/color_blue"
            android:textSize="14sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/findpw_pw"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="20dp"
        android:background="@drawable/edittextline"
        android:hint="密码"
        android:inputType="textPassword"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:textSize="14sp" />

	<TextView
	    android:id="@+id/textView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="3"
	    android:hint="请等待短信验证码"
	    android:textColorHint="@color/color_white"
	    android:textSize="16sp"
	    android:visibility="invisible" />

</LinearLayout>

	<ImageView
	    android:id="@+id/findpw_confirm_btn"
	    android:layout_width="match_parent"
	    android:layout_height="34dp"
	    android:layout_alignParentBottom="true"
	    android:layout_margin="20dp"
	    android:src="@drawable/icon_confirm_white" />

</RelativeLayout>

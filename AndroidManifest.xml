<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wedrips"
    android:versionCode="0"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19"
        android:maxSdkVersion="23"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.wedrips.StartActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustPan"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustPan"
            android:screenOrientation="portrait" >
        </activity>
		<activity
            android:name="com.wedrips.chat.ChatActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>
        
        <activity
            android:name="com.wedrips.dynamic.DynamicAtActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
		<activity
            android:name="com.wedrips.dynamic.DynamicDetailView"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustPan"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.wedrips.account.AccountSetActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.wedrips.dynamic.NewDynamicFragAct"
            android:label="@string/app_name" 
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustPan"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.wedrips.chat.ContactsList"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.wedrips.chat.NewSocialGroup"
            android:label="@string/app_name" 
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustPan"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.wedrips.account.AccountActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
